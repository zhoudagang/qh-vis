package com.originaltek.cn.socket;

import java.io.IOException;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.originaltek.cn.common.beans.ResultBean;

@Controller
@RequestMapping("/checkcenter")
public class CheckCenterController {


	// 推送数据接口
	@ResponseBody
	@PostMapping("/socket/push/{cid}")
	public ResultBean<String> pushToWeb(@PathVariable String cid, String message) throws IOException {
			WebSocketServer.sendInfo(message, cid);
		return new ResultBean<String>(cid);
	}
}
